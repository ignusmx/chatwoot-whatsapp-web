{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "overrides": [
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "project": "./tsconfig.json"
    },
    "plugins": [
        "@typescript-eslint",
        "no-secrets"
    ],
    "ignorePatterns":[
        "dist",
        "node_modules"
    ],
    "rules": {
        "brace-style": "error",
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "keyword-spacing": "error",
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-invalid-this": "error",
        "no-secrets/no-secrets": "error",
        "no-underscore-dangle": "error",
        "no-var": "error",
        "space-before-blocks": "error"
    }
}
